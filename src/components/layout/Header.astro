---
import ThemeToggle from "../ThemeToggle.astro";
import Search from "../Search.astro";
import { menuLinks } from "@/site-config";

const url = new URL(Astro.request.url);
---

<header id="main-header" class="group relative mb-28 flex items-center sm:ps-[4.5rem]">
	<div class="flex sm:flex-col">
		<a
			href="/"
			class="inline-flex items-center grayscale hover:filter-none sm:relative sm:inline-block"
			aria-current={url.pathname === "/" ? "page" : false}
		>
			<svg
				class="me-3 h-10 w-6 sm:absolute sm:start-[-5.5rem] sm:me-0 sm:h-16 sm:w-16"
				aria-hidden="true"
				focusable="false"
				fill="none"
				xmlns="http://www.w3.org/2000/svg"
				viewBox="0 0 392.622 392.622"
			>
				<title>Logo</title>
				<polygon style="fill:#56ACE0;" points="315.709,117.139 221.132,117.139 272.008,172.606 "
				></polygon>
				<polygon style="fill:#FFFFFF;" points="145.301,177.972 247.313,177.972 196.307,122.311 "
				></polygon>
				<g>
					<polygon style="fill:#FFC10D;" points="295.604,177.972 363.612,177.972 336.267,126.19 	"
					></polygon>
